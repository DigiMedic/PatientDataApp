    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=db;Database=patientdb;Username=postgres;Password=postgres;Maximum Pool Size=100;Timeout=30;Command Timeout=30;"
